<div class='accessContainer'>
	<form class='popUpForm' id='addEventForm' method='post' action='/addEvent'>
		<h2>Add a Calendar Event</h2>

		<br />

		<h4>Event Details</h4>

		<div class='addEventLi'>
			<label>Event Name</label>
			<input class='addEventInput' type='text' name='title'>
		</div>	

		<br />

		<div class='addEventLi'>
			<label>Event Date</label>
			<input class='addEventInput' type='date' name='start'>
		</div>	

		<br />

		<div class='addEventLi'>
			<label>Meet Up Time</label>
			<input class='addEventInput' type='time' name='time'>
		</div>	

		<br />

		<h4>Event Features</h4>

		<div class='addEventLi'>
			<label>Hosted By</label>
			<input class='addEventInput' type='text' name='eventGroup'>
		</div>	

		<br />

		<div class='addEventLi'>
			<label>Event Link (optional)</label>
			<input class='addEventInput' type='url' name='url'>
		</div>	

		<br />

		<div class='addEventLi'>
			<label>Issue Categories</label>
			<select class='addEventInput' type='text' name='issueCat' required>
				<option value="" disabled selected>select category</option>
				<option value='healthcare'>healthcare</option>
				<option value='immigration'>immigration</option>
				<option value='income inequality'>income inequality</option>
				<option value='social justice'>social justice</option>
				<option value="reproductive rights">reproductive rights</option>
				<option value="worker's rights">worker's rights</option>
				<option value='other'>other</option>
			</select>	
		</div>	

		<br /><br />

		<button name='next' id='nextBtn'>Next</button>

		<span id='pageNum'>- page 1 of 2 -</span>


	</form>	

