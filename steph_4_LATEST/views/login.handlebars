<div class='accessContainer'>


	<form class='popUpForm' id='loginForm' method='post' action='/login'>

		<h2>Login</h2>

		{{#if error}}
			<p id='accessError'>{{error}}</p>
		{{/if}}

		<br />

		<div class='loginli'>
			<input class='popUpInput' type='email' name='email' placeholder='email'>
		</div>	 

		<br />

		<div class='loginli'>
			<input class='popUpInput' type='password' name='password' placeholder='password'>
		</div>	

		<br />

		<button id='loginButton' name='submit' type='submit'>Login</button>

		<br />

		<button id='logoutButton' name='submit' type='submit'><a href='/logout'>Logout</a></button>

		<br />

	</form>	

</div>	